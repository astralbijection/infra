{
  "suggest": {
    "enablePreview": true,
    "disableKind": true,
    "snippetsSupport": false
  },
  "diagnostic": {
    "virtualText": true,
    "virtualTextCurrentLineOnly": false,
    "virtualTextLines": 1,
    "virtualTextPrefix": " —— "
  },
  "codeLens.enable": true,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
